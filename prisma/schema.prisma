// prisma/schema.prisma
// --- Prisma Client generator & Postgres datasource ---
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Enums used by KB articles ---
enum Difficulty {
  easy
  medium
  hard
}

enum ArticleStatus {
  draft
  published
  archived
}

// --- Core models ---

model Category {
  id         Int         @id @default(autoincrement())
  slug       String      @unique
  name       String
  isActive   Boolean     @default(true)
  createdAt  DateTime    @default(now())

  // Relation: one Category -> many KbArticles
  articles   KbArticle[]

  @@index([slug])
}

model KbArticle {
  id              Int           @id @default(autoincrement())
  slug            String        @unique
  title           String
  content         String        // could be HTML/markdown string
  difficulty      Difficulty    @default(easy)
  timeEstimateMin Int           @default(0)
  toolsJson       Json          @default("[]")
  stepsJson       Json          @default("[]")
  status          ArticleStatus @default(published)
  createdAt       DateTime      @default(now())

  // Foreign key
  categoryId      Int
  category        Category      @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@index([slug])
}
