// This file defines your database models for Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  // You can add description, slug, etc later if you need
}

// Example future model for Knowledge Base entries
model KnowledgeBase {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
