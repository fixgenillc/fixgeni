{
  "name": "fixgeni-backend",
  "version": "1.0.0",
  "private": true,
  "description": "FixGeni backend (flat TS layout, SQLite, no Prisma).",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/server.js",
    "seed": "node dist/seed.js",
    "postbuild": "if [ \"$SEED_ON_DEPLOY\" = \"true\" ]; then echo \"Seeding after build...\" && node dist/seed.js; else echo \"Skipping seed (SEED_ON_DEPLOY not true)\"; fi"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "slugify": "^1.6.6",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.14.11",
    "@types/slugify": "^1.6.5",
    "rimraf": "^5.0.10",
    "typescript": "^5.6.3"
  }
}
